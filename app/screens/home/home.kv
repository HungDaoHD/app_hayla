#:kivy 2.3.0
#:import dp kivy.metrics.dp
#:import sp kivy.metrics.sp


<HomeScreen>:
    padding: dp(16)
    spacing: dp(12)

    canvas.before:
        Color:
            rgba: app.theme.bg
        
        Rectangle:
            pos: self.pos
            size: self.size


    # Page content
    BoxLayout:
        orientation: "vertical"
        padding: dp(16)
        spacing: dp(12)

        canvas.before:
            Color:
                rgba: app.theme.bg
            
            Rectangle:
                pos: self.pos
                size: self.size

        Label:
            text: "Hello, {app.user or 'Guest'}"
            font_size: "20sp"
            size_hint_y: None
            height: dp(28)
        
        Label:
            text: "This is your Home page content area."
            halign: "left"
            valign: "middle"
            text_size: self.size







